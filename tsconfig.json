{
  "compilerOptions": {
    "files": ["globals.d.ts"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@api/*": ["./src/api/*"],
      "@mylib/*": ["./src/mylib/*"],
      "@lib/*": ["./src/lib/*"],
      "@screen/*": ["./src/screen/*"],
      "@service/*": ["./src/service/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@assets": ["./src/assets"],
      "@config": ["./src/config"],
      "@mylib": ["./src/mylib"],
      "@screen": ["./src/screen"],
      "@service": ["./src/service"],
      "@navigation": ["./src/navigation"],
      "@utils": ["./src/utils"],
      "@components": ["./src/components"],
      "@AddElectricityPayment": ["./src/screen/AddElectricityPayment"],
      "@AddElectricityPayment/*": ["./src/screen/AddElectricityPayment/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
